{
  "compilerOptions": {
    "outDir": "es",
    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    // "types": ["node", "global"],
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types", "../../typings"],
    "paths": {
      "@@/*": ["../../.umi/*"]
    }
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
